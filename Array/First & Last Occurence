# First & Last Occurence of an element in array


#include<stdio.h>
#include<math.h>

void occurence(int arr[], int n, int x)
{
	int i,j,count=0;
	for(i=0;i<n;i++)
	{
		if(arr[i]==x)
		{
			printf("First Occurence = %d\n",i);
			break;
		}
	}
	
		for(j=n-1;j>=0;j--)
	{
		if(arr[j]==x)
		{
			printf("Last Occurence = %d",j);
			break;
		}
	}
}


int main()
{
	int arr[]= {1,2,3,5,5,5,5,5,9};
	int x=5;
	int n= sizeof(arr)/sizeof(arr[0]);
	
occurence(arr,n,x);

	
	
}

