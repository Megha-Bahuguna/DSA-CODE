# Squares of a Sorted Array

#include<stdio.h>
#include<math.h>

int sort(int arr[], int n)
{
	int i,j,t;
	
	for(i=0;i<n-1;i++)
	{
		for(j=0;j<n-i-1;j++)
		{
			if(arr[j]>arr[j+1])
			{
				t=arr[j];
				arr[j]=arr[j+1];
				arr[j+1]=t;
				
				
			}
		}
	}
	return arr;
	
}

void sqRoot(int arr[], int n)
{
	int i,m;
	
	for(i=0;i<n;i++)
	{
		m=arr[i];
		arr[i]= m*m;
		
	}
}


void display(int arr[], int n)
{
    int i;
    for(i=0;i<n;i++)
    {
    	printf("%d \t", arr[i]);
	}

}

int main()
{
	int arr[]={-5,-1,0,4,6,8};
	int n= sizeof(arr)/sizeof(arr[0]);
	
		printf("\nElements before squareRoot\n");
			display(arr,n);
			
	sqRoot(arr,n);
	
	printf("\nElements before sorting\n");
		display(arr,n);
		
	int p= sort(arr,n);
		printf("\nElements after sorting\n");
	display(arr,n);
	
}




